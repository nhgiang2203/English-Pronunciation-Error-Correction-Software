extend ../../layouts/default.pug

block main
  .dashboard-wrapper
    .dashboard-left
      .header-with-filter(style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 1rem")
        h2 Số lượng người đăng kí
        .dropdown.relative
          select#viewSelector
            option(value="year") Theo năm
            option(value="month" selected) Theo tháng
      canvas#saveChart(width="600" height="300" style="margin-bottom: 2rem")

    
    .dashboard-right
      .stat-grid
        .stat-card(style="background:#ff7ca3")
          h3= samples
          p Số bài Sample

        .stat-card(style="background:#5ed0fb")
          h3= practices
          p Số bài Practice

        .stat-card(style="background:#bc7af9")
          h3= part2s
          p Số bài Part 2

        .stat-card(style="background:#d7d7d7")
          h3= news
          p Bài báo

      .admin-list(style="margin-top: 2rem; background: #fff; padding: 1rem; border-radius: 12px; box-shadow: 0 2px 6px rgba(0,0,0,0.1)")
        h3(style="margin-bottom: 1rem") Danh sách quản trị viên
        .admin-users(style="display: flex; flex-wrap: wrap; gap: 1rem; max-height: 200px; overflow-y: auto")
          each acc in accounts
            .admin-user(style="display: flex; align-items: center; gap: 0.5rem; background: #f5f5f5; padding: 0.5rem 1rem; border-radius: 8px")
              img(src=acc.avatar alt="Avatar" style="width: 40px; height: 40px; border-radius: 50%")
              a(href=`/${prefixAdmin}/account/detail/${acc.id}`) #{acc.username}


block scripts 
  script(src="https://cdn.jsdelivr.net/npm/chart.js")
  script(src="/admin/js/dashboard.js") 