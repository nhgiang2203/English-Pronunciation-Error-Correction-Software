extend ../../layouts/default
include ../../mixins/alert.pug

block main 

        h1(class="mb-4 text-primary") Phân quyền
        +alert-success(5000)

        if(records)
            div(data-records=records)

            div(class="text-right")
                button(
                    type="submit"
                    class="btn btn-primary mb-3"
                    button-submit
                ) Cập nhật

            table(
                class="table table-hover table-sm"
                table-permissions
            )
                thead
                    tr
                        th Tính năng
                        each item in records
                            th(class="text-center") #{item.title}
                tbody
                    tr(data-name="id" class="d-none")
                        td
                        each item in records
                            td(class="text-center")
                                input(type="text" value=item.id)
                    //- Danh mục sản phẩm
                    tr
                        td(colspan="4")
                            b Bài báo
                    tr(data-name="news_view")
                        td Xem
                        each item in records
                            td(class="text-center")
                                input(type="checkbox")
                    tr(data-name="news_create")
                        td Thêm mới
                        each item in records
                            td(class="text-center")
                                input(type="checkbox")
                    tr(data-name="news_edit")
                        td Chỉnh sửa
                        each item in records
                            td(class="text-center")
                                input(type="checkbox")
                    tr(data-name="news_delete")
                        td Xóa
                        each item in records
                            td(class="text-center")
                                input(type="checkbox")

                    //- Sản phẩm
                    tr
                        td(colspan="4")
                            b Part 1
                    tr(data-name="part1_view")
                        td Xem
                        each item in records
                            td(class="text-center")
                                input(type="checkbox")
                    tr(data-name="part1_create")
                        td Thêm mới
                        each item in records
                            td(class="text-center")
                                input(type="checkbox")
                    tr(data-name="part1_edit")
                        td Chỉnh sửa
                        each item in records
                            td(class="text-center")
                                input(type="checkbox")
                    tr(data-name="part1_delete")
                        td Xóa
                        each item in records
                            td(class="text-center")
                                input(type="checkbox")
                    
                    tr
                        td(colspan="4")
                            b Part 2
                    tr(data-name="part2_view")
                        td Xem
                        each item in records
                            td(class="text-center")
                                input(type="checkbox")
                    tr(data-name="part2_create")
                        td Thêm mới
                        each item in records
                            td(class="text-center")
                                input(type="checkbox")
                    tr(data-name="part2_edit")
                        td Chỉnh sửa
                        each item in records
                            td(class="text-center")
                                input(type="checkbox")
                    tr(data-name="part2_delete")
                        td Xóa
                        each item in records
                            td(class="text-center")
                                input(type="checkbox")

                    //- Nhóm quyền
                    tr
                        td(colspan="4")
                            b Nhóm quyền
                    tr(data-name="role_view")
                        td Xem
                        each item in records
                            td(class="text-center")
                                input(type="checkbox")
                    tr(data-name="role_create")
                        td Thêm mới
                        each item in records
                            td(class="text-center")
                                input(type="checkbox")
                    tr(data-name="role_edit")
                        td Chỉnh sửa
                        each item in records
                            td(class="text-center")
                                input(type="checkbox")
                    tr(data-name="role_delete")
                        td Xóa
                        each item in records
                            td(class="text-center")
                                input(type="checkbox")
                    tr(data-name="role_permissions")
                        td Phân quyền
                        each item in records
