                                input(type="checkbox")
                    tr(data-name="account_delete")
                        td Xóa
                        each item in records
                            td(class="text-center")
                                input(type="checkbox")
        form(
            id="form-change-permissions"
            method="POST"
            action=`/${prefixAdmin}/role/permissions?_method=PATCH`
        )
            div(class="form-group")
                input(
                    type="text"
                    class="form-control"
                    name="permissions"
                    class="d-none"
                )

