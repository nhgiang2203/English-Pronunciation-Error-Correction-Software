extend ../../layouts/default
include ../../mixins/alert

block main 
  div.alert-container
    +alert-success(5000)
    +alert-error(5000)
  
  h1.mb-4 #{pageTitle}

  form(
    action='/admin/news/create'
    method='POST'
    enctype="multipart/form-data"
  )
    .form-group 
      label(for='title') Title 
      input(
        type='text'
        class='form-control'
        id='title'
        name='title'
        required
      )
    div(
      class='form-group'
      upload-image
    )
      label(for='img') Image 
      input(
        type='file'
        class='form-control-file'
        id='img'
        name='img'
        accept='image/*'
        upload-image-input
      )
      img(
        src=''
        class='image-preview'
        upload-image-preview
      )

    .form-group 
      label(for='content') Content 
      textarea(
        type='text'
        class='form-control'
        id='content'
        name='content'
        rows='10'
        textarea-mce
      )
    
    div(class='form-group form-check form-check-inline')
      input(
        type='radio'
        class='form-check-input'
        id='statusActive'
        name='status'
        value='active'
        checked
      )
      label(for='statusActive') Active

    div(class='form-group form-check form-check-inline')
      input(
        type='radio'
        class='form-check-input'
        id='statusInactive'
        name='status'
        value='inactive'
      )
      label(for='statusInactive') Inactive 
    
    .form-group 
      button(
        type='submit'
        class='btn btn-primary'
      ) ADD

block scripts
  script.
    document.addEventListener('DOMContentLoaded', function () {
      if (typeof initTinyMCE === 'function') {
        initTinyMCE(); // hoáº·c initTinyMCEForNewTextareas()
      }
    });