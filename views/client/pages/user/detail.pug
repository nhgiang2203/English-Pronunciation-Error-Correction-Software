extend ../../layouts/default

block styles
  link(rel='stylesheet', href='/css/bootstrap-profiles.min.css')

block main 
  section(style='background-color: #eee;')
    .container.py-5
      .row
        .col-lg-4
          .card.mb-4
            .card-body.text-center
              if(user.avatar==null)
                img.rounded-circle.img-fluid(src='https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-chat/ava3.webp' alt='avatar' style='width: 150px;')
              else 
                img.rounded-circle.img-fluid(src=user.avatar style='width: 150px;')
              h5.my-3 #{user.username}
              p.text-muted.mb-1 #{user.slogan || ''}
              p.text-muted.mb-4 #{user.address || ''}
              .d-flex.justify-content-center.mb-2
                button.btn.btn-primary(type='button') Follow
                button.btn.btn-outline-primary.ms-1(type='button') Message
          .card.mb-4.mb-lg-0
            .card-body.p-0
              ul.list-group.list-group-flush.rounded-3
                li.list-group-item.d-flex.justify-content-between.align-items-center.p-3
                  i.fab.fa-twitter.fa-lg(style='color: #55acee;')
                  p.mb-0 #{user.twitter || '(empty)'}
                li.list-group-item.d-flex.justify-content-between.align-items-center.p-3
                  i.fab.fa-instagram.fa-lg(style='color: #ac2bac;')
                  p.mb-0 #{user.instagram || '(empty)'}
                li.list-group-item.d-flex.justify-content-between.align-items-center.p-3
                  i.fab.fa-facebook-f.fa-lg(style='color: #3b5998;')
                  p.mb-0 #{user.facebook || '(empty)'}
        .col-lg-8
          .card.mb-4
            .card-body
              .row
                .col-sm-3
                  p.mb-0 Username
                .col-sm-9
                  p.text-muted.mb-0 #{user.username}
              hr
              .row
                .col-sm-3
                  p.mb-0 Email
                .col-sm-9
                  p.text-muted.mb-0 #{user.email}
              hr
              .row
                .col-sm-3
                  p.mb-0 Phone
                .col-sm-9
                  p.text-muted.mb-0 #{user.phone || '(empty)'}

              hr
              .row
                .col-sm-3
                  p.mb-0 Address
                .col-sm-9
                  p.text-muted.mb-0 #{user.address || '(empty)'}
          .row
            .col-lg-12
              .card.mb-4.mb-md-0
                .card-body
                  p.mb-4
                    |  My answers
                  