extend ../../layouts/default
include ../../mixins/alert

block styles
  link(rel='stylesheet', href='/css/styleRegister.css')

block main
  div.alert-container
    +alert-success(5000)
    +alert-error(5000)

  .body-section
    .wrapper
      .inner
        img.image-1(src='/images/image-1.png' alt='')
        form#login-form(action='/user/login' method='POST')
          input(type='hidden', name='redirect', value=redirect)
          h3 Welcome Back
          .form-holder
            span(class="fa fa-envelope")
            input.form-control(type='email' placeholder='Email' name='email' required)
          .form-holder
            span(class="fa fa-lock")
            input.form-control(type='password' placeholder='Password' name='password' required)

          p#error-message.text-danger.mt-2(style="display: none; font-weight: bold")

          button(type='submit')
            span Sign in

          hr(style="margin: 30px 0;")

          a.btn.btn-lg.btn-block.text-white(style='background-color: #dd4b39;' href=`/user/auth/google?redirect=${redirect}`)
            i.fab.fa-google.me-2
            |  Sign in with Google
          p.mt-4.text-center
            | New account? 
            a(href='/user/register') Sign up here
        img.image-2(src='/images/image-2.png' alt='')
