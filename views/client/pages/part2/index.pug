extend ../../layouts/default
include ../../mixins/box-head
include ../../mixins/pagination-part2

block main 
  .container.my-5
    .row 
      .col-12 

    .row
      .col-12
        .card.shadow-lg.border-0.rounded-3
          .card-header.bg-primary.text-white.py-3.rounded-top
            h4.mb-0.text-center Part 2

          .card-body.bg-light

            .row
              each topic in topics
                .col-md-4.mb-4
                  .card.card-hover.shadow-sm.border-0.rounded-3
                    .card-body
                      h5.card-title.mb-0
                        if loggedInUser
                          a(href=`/part2/detail/${topic.slug}`, class="text-decoration-none text-primary fw-bold") #{topic.title}
                        else
                          a(
                            href=`/user/login?redirect=/part2/detail/${topic.slug}`, 
                            class="text-decoration-none text-secondary fw-bold", 
                            title="Đăng nhập để sử dụng"
                          ) 
                            i.fa-solid.fa-lock.mr-1
                            | #{topic.title}
            +pagination(pagination)

block script 
  script(src="/js/part2.js") 