mixin pagination(pagination, type)
  - const pag = pagination[type];

  if pag
    nav
      ul(class="pagination")

        if (pag.currentPage > 1)
          li(class="page-item")
            button(
              class="page-link"
              button-pagination=pag.currentPage - 1
            ) Trang trước

        - for (var i = 1; i <= pag.totalPage; i++)
          li(class=`page-item ${pag.currentPage == i ? "active" : ""}`)
            button(
              class="page-link"
              button-pagination=i
            ) #{i}

        if (pag.currentPage < pag.totalPage)
          li(class="page-item")
            button(
              class="page-link"
              button-pagination=pag.currentPage + 1
            ) Kế tiếp



